        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding LoadCommand}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCommand}" CommandParameter="{Binding LoadedFile}" />
        <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="{Binding SaveCommand}" CommandParameter="{x:Null}" />
        <KeyBinding Key="F4" Modifiers="Alt" Command="{Binding CloseCommand}" />
