                                    <TextBox Text="{Binding Weapon2Name, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Text="{Binding Weapon3Name, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="ATK BONUS" />
